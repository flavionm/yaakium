  "build": {
    "features": [
      "updater"
    ]
  },
  "app": {
    "security": {
      "capabilities": [
        "default",
        {
          "identifier": "release",
          "windows": [
            "*"
          ],
          "permissions": [
            "yaak-license:default"
          ]
        }
      ]
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://api.github.com/repos/flavionm/yaakium/releases/latest"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUyNjI5RUVDQzQ4NDJEMzIKUldReUxZVEU3SjVpVXIzWWoxQzI4NytjWjE0UzhlbnlCSVNaUEVQWGx1eTFycGsycXloSDh3ZlUK"
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "windows": {
      "signCommand": "trusted-signing-cli -e https://eus.codesigning.azure.net/ -a Yaak -c yaakapp %1"
    }
  }
}
